---
import { Image } from "@astrojs/image/components";
import logoImage from "../assets/logo.png";
---

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.getElementById("main-header") as HTMLElement;
    const toggleMenuButton = document.getElementById(
      "toggle-navigation-menu"
    ) as HTMLButtonElement;
    let menuOpen = false;
    toggleMenuButton.addEventListener("click", () => {
      header.classList.toggle("menu-open");

      menuOpen = !menuOpen;
      toggleMenuButton.setAttribute("aria-expanded", menuOpen.toString());
    });
  });
</script>
<header id="main-header" class="group relative flex items-center">
  <div class="fixed top-0 w-full backdrop-blur-md z-40">
    <div
      style="--order: 2;"
      class="mx-auto max-w-7xl px-4 sm:px-6 py-3 sm:py-6 flex items-center justify-between slide-down-hidden"
    >
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <a href="#" class="flex items-center">
          <span class="sr-only">Saurav</span>
          <Image
            class="mr-1 h-10 w-10 mb-2"
            src={logoImage}
            alt="Saurav Icon"
            loading="eager"
          />
          <p
            class="text-2xl sm:text-3xl text-green-500 font-black glitch hover:text-gray-900"
          >
            Saurav
          </p>
        </a>
      </div>

      <nav
        id="navigation-menu"
        class="absolute inset-4 top-14 hidden flex-col items-end gap-y-4 rounded-md bg-[color:var(--theme-menu-bg)] py-4 text-accent shadow backdrop-blur group-[.menu-open]:z-50 group-[.menu-open]:flex sm:static sm:z-auto sm:flex sm:flex-row sm:items-center sm:rounded-none sm:bg-transparent sm:py-0 sm:shadow-none sm:backdrop-blur-none"
        aria-label="Main menu"
      >
        <div
          class="sm:divide-x sm:divide-dashed sm:divide-green-500 flex flex-col items-end gap-y-4 sm:flex sm:flex-row sm:items-center"
        >
          <a href="#" class="text-base font-medium text-slate-400 glitch px-4"
            >About</a
          >

          <a href="#" class="text-base font-medium text-slate-400 glitch px-4"
            >Projects</a
          >
          <a href="#" class="text-base font-medium text-slate-400 glitch px-4"
            >Contact</a
          >
        </div>

        <a
          href="#"
          class="ml-8 mr-4 text-green-500 glitch inline-flex items-center justify-center whitespace-nowrap border border-green-500 border-dotted px-4 py-1 text-base font-medium shadow-sm hover:bg-slate-700"
          >Resume</a
        >
      </nav>
      <button
        id="toggle-navigation-menu"
        class="group relative ml-8 h-7 w-7 sm:invisible sm:hidden"
        type="button"
        aria-label="Open main menu"
        aria-expanded="false"
        aria-haspopup="menu"
      >
        <svg
          id="line-svg"
          class="absolute top-1/2 left-1/2 h-full w-full -translate-x-1/2 -translate-y-1/2 transition-all group-aria-expanded:scale-0 group-aria-expanded:opacity-0"
          aria-hidden="true"
          focusable="false"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          data-hide="false"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 9h16.5m-16.5 6.75h16.5"></path>
        </svg>
        <svg
          id="cross-svg"
          class="absolute top-1/2 left-1/2 h-full w-full -translate-x-1/2 -translate-y-1/2 scale-0 text-accent opacity-0 transition-all group-aria-expanded:scale-100 group-aria-expanded:opacity-100"
          class="text-accent"
          aria-hidden="true"
          focusable="false"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          data-hide="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .glitch:hover {
    position: relative;
    text-shadow: 0.05em 0 0 #00fffc, -0.03em -0.04em 0 #fc00ff,
      0.025em 0.04em 0 #fffc00;
    animation: glitch 725ms infinite;
  }

  .glitch span {
    position: absolute;
    top: 0;
    left: 0;
  }

  .glitch span:first-child {
    animation: glitch 500ms infinite;
    clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
    transform: translate(-0.04em, -0.03em);
    opacity: 0.75;
  }

  .glitch span:last-child {
    animation: glitch 375ms infinite;
    clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
    transform: translate(0.04em, 0.03em);
    opacity: 0.75;
  }

  @keyframes glitch {
    0% {
      text-shadow: 0.05em 0 0 #00fffc, -0.03em -0.04em 0 #fc00ff,
        0.025em 0.04em 0 #fffc00;
    }
    15% {
      text-shadow: 0.05em 0 0 #00fffc, -0.03em -0.04em 0 #fc00ff,
        0.025em 0.04em 0 #fffc00;
    }
    16% {
      text-shadow: -0.05em -0.025em 0 #00fffc, 0.025em 0.035em 0 #fc00ff,
        -0.05em -0.05em 0 #fffc00;
    }
    49% {
      text-shadow: -0.05em -0.025em 0 #00fffc, 0.025em 0.035em 0 #fc00ff,
        -0.05em -0.05em 0 #fffc00;
    }
    50% {
      text-shadow: 0.05em 0.035em 0 #00fffc, 0.03em 0 0 #fc00ff,
        0 -0.04em 0 #fffc00;
    }
    99% {
      text-shadow: 0.05em 0.035em 0 #00fffc, 0.03em 0 0 #fc00ff,
        0 -0.04em 0 #fffc00;
    }
    100% {
      text-shadow: -0.05em 0 0 #00fffc, -0.025em -0.04em 0 #fc00ff,
        -0.04em -0.025em 0 #fffc00;
    }
  }
</style>
