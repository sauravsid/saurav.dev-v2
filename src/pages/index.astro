<Layout title="Saurav | Portfolio">
  <main class="max-w-5xl mx-auto px-6 overflow-hidden">
    <section
      class="min-h-screen flex flex-col justify-center items-start py-28"
    >
      <!-- <Starfield /> -->
      <h1 style="--order: 5;" class="mb-4 text-green-400 slide-in-hidden">
        Hi there, I'm
      </h1>
